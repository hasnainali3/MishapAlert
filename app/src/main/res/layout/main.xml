<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/sin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="45dp"
            android:gravity="center"
            android:text="Sign In"
            android:textColor="#0bbaff"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/imac"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/logo" />

        <customfonts.MyTextView
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/sin"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="Already have an account?"
            android:textColor="#c4c5c9"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/circle"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:background="@drawable/circleangle"
            android:orientation="horizontal"
            android:padding="16dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:paddingLeft="3dp"
                    android:src="@drawable/signuparrow" />
            </FrameLayout>

            <customfonts.TextViewNew
                android:id="@+id/signupforfree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:text="Sign Up For Free"
                android:textColor="#fff"
                android:textSize="22dp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>